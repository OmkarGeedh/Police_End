<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ncrb_police">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NCRB_Police">
        <activity
            android:name=".Navigation_DriverActivity"
            android:label="@string/title_activity_navigation_driver"
            android:theme="@style/Theme.NCRB_Police.NoActionBar"></activity>
        <activity android:name=".UserRegister" />
        <activity android:name=".MainActivity" />
        <activity android:name=".PoliceLoginActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>