<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regular2"
    tools:context=".UserRegister">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/header2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="Register"
                android:textColor="@color/white"
                android:textSize="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/placeholder"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                app:srcCompat="@drawable/logo"
                tools:srcCompat="@drawable/logo" />

            <EditText
                android:id="@+id/u_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="12"
                android:inputType="textPersonName"
                android:hint="First Name"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/elements_red"
                android:gravity="center_horizontal"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/u_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="12"
                android:inputType="textPersonName"
                android:hint="Last Name"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/elements_red"
                android:gravity="center_horizontal"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/u_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="12"
                android:inputType="textEmailAddress"
                android:hint="Email ID"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:background="@drawable/elements_red"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="50dp"
                android:gravity="center_horizontal"
                android:padding="5dp" />

            <EditText
                android:id="@+id/u_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="12"
                android:inputType="textPassword"
                android:hint="Password"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:background="@drawable/elements_red"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/u_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="12"
                android:inputType="phone"
                android:hint="Phone No."
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/elements_red"
                android:gravity="center_horizontal"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/u_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="12"
                android:inputType="textPostalAddress"
                android:hint="Locality"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="50dp"
                android:padding="5dp"
                android:background="@drawable/elements_red"
                android:gravity="center_horizontal"/>

            <Button
                android:id="@+id/Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:background="@drawable/gradiant_blue_wo_curve"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:paddingHorizontal="60dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:layout_marginBottom="50dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>